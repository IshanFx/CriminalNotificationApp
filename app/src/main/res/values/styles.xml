<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogInTheme">
        <item name="android:textColor">#FF7F66</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/custome_edittext</item>
        <item name="colorControlActivated">#E9F1DF</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">#E9F1DF</item>
        <!-- EditText line color when EditText  in un-focus-->

        <item name="colorControlNormal">#fff</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LogInButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HomeBtn">
        <item name="android:layout_width">@dimen/home_btn_width</item>
        <item name="android:layout_height">@dimen/home_btn_height</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="listStyle">
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#31353D</item>
        <item name="android:text">hello</item>

    </style>
    <style name="latlongstyle">
        <item name="android:textColor">#fff</item>

        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="recordbtn">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">120dp</item>

    </style>

    <style name="historydetailtable">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tbltext">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
